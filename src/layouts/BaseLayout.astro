---
import Header from "../components/Header.astro";
const { title="default title" } = Astro.props;
const { maxWidth="50em"} = Astro.props;
---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <script is:inline>
        const theme = (() => {
            if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
                console.log('return theme from localStorage');
                return localStorage.getItem('theme');
            }

            if (window.matchMedia("(prefers-color-scheme: light)").matches) {
                console.log('prefers light: true -- returning "light"');
                return 'light';
            }

            console.log('prefers light: false -- returning "dark"');
            return 'dark';
        })();

        if (theme === 'light') {
            document.documentElement.classList.add('light');
        } else {
            document.documentElement.classList.remove('light');
        }
    </script>
</head>
<body>
<main>
    <slot />
</main>
</body>
</html>

<style is:global define:vars={{maxWidth}}>

    @import url('https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap');

    /* dark-mode colors */
    :root {
        --bg-dark: oklch(0.19 0.005 71);
        --bg-light: oklch(0.25 0.01 71);
        --text: oklch(0.96 0.07 69);
        --text-muted: oklch(0.76 0.07 69);
        --highlight: oklch(0.5 0.07 69);
        --primary: oklch(0.681 0.1586 47.54);
        --secondary: oklch(0.76 0.1 249);
        --danger: oklch(0.35 0.1 30);
        --rounding: 18px;
        --edge-padding: 2em;
        --gap-tiny: 0.4em;
        --gap-small: 2em;
        --gap-medium: 4em;
        --gap-large: 6em
    }

    /* light-mode colors */
    :root.light {
        --bg-dark: oklch(.8 0.06 69);
        --bg-light: oklch(0.96 0.035 69);
        --text: oklch(0.25 0.0214 36.85);
        --text-muted: oklch(0.4 0.07 69);
        --highlight: oklch(1 0.07 69);
        --border: oklch(0.6 0.07 69);
        --border-muted: oklch(0.7 0.07 69);
        --primary: oklch(0.65 0.1586 47.54);
        --secondary: oklch(0.6 0.15 249);
        --danger: oklch(0.75 0.2 30);
    }

    html,
    body {
        margin: 0;
        width: 100%;
        min-height: 100vh;
        background-color: var(--bg-dark);
        color: var(--text);
        font-family: Verdana, sans-serif;
        text-wrap: pretty;
        line-height: 1.6em;
    }

    main {
        margin: auto;
        padding: 0 var(--edge-padding) 6em;
        max-width: var(--maxWidth);
    }

    hr {
        border: 1px solid var(--primary);
        border-radius: 2px;
    }

    a {
        cursor: pointer;
        color: var(--text);
        text-decoration-color: var(--primary);
        text-decoration-thickness: 2px;
        text-decoration-skip-ink: none;
        text-underline-offset: 0.3em;
    }

    a:hover {
        color: var(--primary);
    }

    li::marker {
        color: var(--primary);
    }
</style>
