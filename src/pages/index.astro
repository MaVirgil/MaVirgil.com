<style>
	.icon-container-link {
		width: 24px;
		height: 24px;
	}

	[data-icon] {
		font-size: 1.5em;
	}

	[data-icon]:hover {
		animation: icon-anim 50ms 1 forwards;
	}

	@keyframes icon-anim {
		0% {
			transform: scale(1);
		}
		100% {
			transform: scale(1.1);
		}
	}
</style>