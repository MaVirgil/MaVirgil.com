---
import BaseLayout from "../layouts/BaseLayout.astro"
import IconContainer from "../components/IconContainer.astro"
import { Content as BioContent} from '../components/content/bio.md'
import { Icon } from 'astro-icon/components'
import Header from "../components/Header.astro";
import { Image } from "astro:assets"
import profileImage from '../../public/logo.png'
---

<BaseLayout title="Magnus SÃ¸rensen">
	<Header />
	<div class="hero">
		<div class="bio">
			<BioContent />
		</div>
		<div class="illustration">
			<Image src={profileImage} alt="illustration of me" />
		</div>
	</div>
</BaseLayout>

<style>

	img {
		width: 8em;
		height: auto;
		fill: var(--text);
	}

	.hero {
		margin-top: var(--gap-medium);
		display: flex;
		align-items: center;
	}

	.icon-container-link {
		width: 24px;
		height: 24px;
	}

	[data-icon] {
		font-size: 1.5em;
	}

	[data-icon]:hover {
		color: var(--primary);
		animation: icon-anim 50ms 1 forwards;
	}

	@keyframes icon-anim {
		0% {
			transform: scale(1);
		}
		100% {
			transform: scale(1.1);
		}
	}

	#contact h2 {
		font-weight: normal;
		margin-bottom: 0.5em;
	}

	#contact-info {
		display: inline-flex;
		flex-direction: column;
	}

	#contact-info a {
		display: inline;
	}

</style>